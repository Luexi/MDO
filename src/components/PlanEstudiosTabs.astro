---
import type { PlanAreaItem, PlanOptativa, PlanSemestre } from "@/data/planEstudios";

interface Props {
  areas: PlanAreaItem[];
  semestres: PlanSemestre[];
  optativas: PlanOptativa[];
}

const { areas, semestres, optativas } = Astro.props;
---

<div class="mb-12">
  <div class="bg-card rounded-2xl border border-border p-6 sm:p-8 shadow-sm">
    <div class="flex items-start gap-4 mb-6">
      <div class="p-3 bg-primary/10 rounded-xl">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 text-primary"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H19a1 1 0 0 1 1 1v18a1 1 0 0 1-1 1H6.5a1 1 0 0 1 0-5H20"/><path d="m9 9.5 2 2 4-4"/></svg>
      </div>
      <div>
        <h2 class="font-display text-2xl font-semibold text-foreground mb-2">Plan de Estudios</h2>
        <p class="text-muted-foreground">
          Estructura curricular por área de formación y organización por semestre.
        </p>
      </div>
    </div>

    <input type="radio" name="plan-tab" id="plan-tab-area" class="peer/area hidden" checked />
    <input type="radio" name="plan-tab" id="plan-tab-semestre" class="peer/semestre hidden" />

    <div class="w-full grid grid-cols-2 h-auto p-1 bg-muted rounded-xl">
      <label for="plan-tab-area" class="plan-tab-trigger cursor-pointer rounded-lg py-3 px-4 font-medium text-sm text-center flex items-center justify-center gap-2 transition-colors peer-checked/area:bg-card peer-checked/area:shadow-sm">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4"><rect width="7" height="7" x="14" y="3" rx="1"/><path d="M10 21V8a1 1 0 0 0-1-1H4a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1v-5a1 1 0 0 0-1-1H3"/></svg>
        Área de formación
      </label>
      <label for="plan-tab-semestre" class="plan-tab-trigger cursor-pointer rounded-lg py-3 px-4 font-medium text-sm text-center flex items-center justify-center gap-2 transition-colors peer-checked/semestre:bg-card peer-checked/semestre:shadow-sm">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4"><path d="M12 3v18"/><rect width="18" height="18" x="3" y="3" rx="2"/><path d="M3 9h18"/><path d="M3 15h18"/></svg>
        Semestre
      </label>
    </div>

    <!-- Area content -->
    <div class="mt-6 hidden peer-checked/area:block">
      <div class="grid gap-4 md:grid-cols-3">
        {areas.map((area) => (
          <article class="rounded-xl border border-border bg-background p-5">
            <h3 class="font-display text-lg font-semibold text-foreground mb-4">{area.area}</h3>
            <ul class="space-y-2.5">
              {area.unidades.map((unidad) => (
                <li class="flex items-start gap-2.5">
                  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-4 w-4 text-primary mt-0.5 flex-shrink-0"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="m9 11 3 3L22 4"/></svg>
                  <span class="text-sm text-foreground/90">{unidad}</span>
                </li>
              ))}
            </ul>
          </article>
        ))}
      </div>
    </div>

    <!-- Semestre content -->
    <div class="mt-6 space-y-5 hidden peer-checked/semestre:block">
      {semestres.map((semestre) => (
        <section class="rounded-xl border border-border bg-background p-4 sm:p-5">
          <div class="flex flex-wrap items-center gap-2 mb-3">
            <h3 class="font-display text-lg font-semibold text-foreground mr-1">Semestre {semestre.semestre}</h3>
            <span class="inline-flex items-center rounded-full bg-primary/10 px-2.5 py-1 text-xs font-medium text-primary">
              TH: {semestre.totalTh}
            </span>
            <span class="inline-flex items-center rounded-full bg-accent/10 px-2.5 py-1 text-xs font-medium text-accent">
              Créditos: {semestre.totalCred}
            </span>
          </div>
          <div class="overflow-x-auto">
            <table class="min-w-[560px] w-full text-sm">
              <thead>
                <tr class="border-b border-border text-muted-foreground">
                  <th class="text-left py-2 pr-3 font-medium">Unidad de aprendizaje</th>
                  <th class="text-right py-2 px-3 font-medium">TH</th>
                  <th class="text-right py-2 pl-3 font-medium">Total/Cred</th>
                </tr>
              </thead>
              <tbody>
                {semestre.rows.map((row) => (
                  <tr class="border-b border-border/70 last:border-b-0">
                    <td class="py-2.5 pr-3 text-foreground/90">{row.unidad}</td>
                    <td class="py-2.5 px-3 text-right text-foreground/90">{row.th}</td>
                    <td class="py-2.5 pl-3 text-right text-foreground/90">{row.totalCred}</td>
                  </tr>
                ))}
              </tbody>
              <tfoot>
                <tr class="border-t border-border">
                  <td class="pt-3 pr-3 font-semibold text-foreground">Total semestre</td>
                  <td class="pt-3 px-3 text-right font-semibold text-foreground">{semestre.totalTh}</td>
                  <td class="pt-3 pl-3 text-right font-semibold text-foreground">{semestre.totalCred}</td>
                </tr>
              </tfoot>
            </table>
          </div>
        </section>
      ))}

      <section class="rounded-xl border border-border bg-background p-4 sm:p-5">
        <h3 class="font-display text-lg font-semibold text-foreground mb-3">Lista de Unidades de Aprendizaje Optativas</h3>
        <div class="overflow-x-auto">
          <table class="min-w-[560px] w-full text-sm">
            <thead>
              <tr class="border-b border-border text-muted-foreground">
                <th class="text-left py-2 pr-3 font-medium">Unidad de aprendizaje</th>
                <th class="text-right py-2 px-3 font-medium">TH</th>
                <th class="text-right py-2 pl-3 font-medium">Total/Cred</th>
              </tr>
            </thead>
            <tbody>
              {optativas.map((optativa) => (
                <tr class="border-b border-border/70 last:border-b-0">
                  <td class="py-2.5 pr-3 text-foreground/90">{optativa.unidad}</td>
                  <td class="py-2.5 px-3 text-right text-foreground/90">{optativa.th}</td>
                  <td class="py-2.5 pl-3 text-right text-foreground/90">{optativa.totalCred}</td>
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </section>
    </div>
  </div>
</div>
