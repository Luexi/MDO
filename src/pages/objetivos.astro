---
import BaseLayout from "@/layouts/BaseLayout.astro";
import { PageHeader } from "@/components/ui/PageHeader";
import ObjetivosTabs from "@/components/ObjetivosTabs.astro";
import PlanEstudiosTabs from "@/components/PlanEstudiosTabs.astro";
import { planOptativas, planPorArea, planPorSemestre } from "@/data/planEstudios";

const objetivosParticulares = [
  "Diagnosticar de forma crítica la situación operativa, financiera y estratégica de organizaciones públicas y privadas.",
  "Aplicar modelos avanzados de dirección y gestión para mejorar la eficiencia y la toma de decisiones en contextos complejos.",
  "Desarrollar investigación aplicada con intervención social para impulsar emprendimiento sostenible y empleo digno en la región.",
  "Vincular proyectos de titulación con sectores productivos e instituciones públicas para generar soluciones transferibles.",
];

const metas = [
  "Conseguir en 2026 el reconocimiento en el Sistema Nacional de Posgrados (SNP) como programa elegible para becas.",
  "Actualizar en 2028 el plan de estudios con base en evaluación del SNP y seguimiento de egresadas y egresados.",
  "Consolidar el núcleo académico: 60% con experiencia profesional destacable (2027), 100% con Perfil Deseable PRODEP (2027) y 80% con distinción SNII (2028).",
  "Sostener productividad anual del núcleo académico: 90% en eventos de investigación LIES y al menos una publicación arbitrada o en libro reconocido por integrante.",
  "Alcanzar 70% de eficiencia terminal al cierre de 2026 y garantizar en 2026 movilidad académica o profesional para todo el estudiantado.",
  "Fortalecer en 2027 la infraestructura tecnológica y el acceso a recursos científicos y herramientas digitales para aprendizaje e investigación.",
];

const perfilIngreso = [
  "Egresadas y egresados de licenciaturas afines (administración, economía, contaduría, mercadotecnia, turismo y áreas relacionadas).",
  "Conocimientos básicos en administración, finanzas, economía, informática y estadística descriptiva.",
  "Habilidades de comunicación oral y escrita, trabajo colaborativo y gestión de información en entornos virtuales.",
  "Pensamiento analítico y orientación a la solución de problemas organizacionales.",
  "Interés por la investigación aplicada, la innovación y el uso de nuevas tecnologías.",
  "Comprensión lectora de textos académicos en inglés.",
  "Sentido ético, responsabilidad social y disposición para contribuir a la inclusión y equidad.",
];

const perfilEgreso = [
  "Diseñar, implementar y evaluar modelos de gestión e intervención para mejorar el desempeño organizacional.",
  "Dirigir organizaciones con pensamiento estratégico, liderazgo y enfoque ético.",
  "Desarrollar investigación aplicada y consultoría para resolver problemas complejos con impacto económico y social.",
  "Formular y evaluar proyectos de inversión y estrategias de crecimiento en distintos sectores.",
  "Integrar tecnologías de información e inteligencia artificial en procesos de decisión y gestión.",
  "Conformar y liderar equipos de alto desempeño en contextos multidisciplinarios.",
  "Impulsar emprendimiento sostenible, desarrollo regional y generación de empleo digno.",
  "Actuar con responsabilidad social, sentido crítico y compromiso con los valores universitarios.",
];
---

<BaseLayout title="MDO UAGro | Objetivos" description="Objetivos, metas y perfiles de ingreso y egreso del programa MDO UAGro.">
  <PageHeader
    title="Objetivos del Programa"
    subtitle="Formando líderes con capacidades directivas y de investigación de alto nivel"
    badge="MDO UAGro"
  />

  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4">
      <PlanEstudiosTabs areas={planPorArea} semestres={planPorSemestre} optativas={planOptativas} />

      <div class="bg-card rounded-2xl p-8 shadow-sm border border-border mb-12">
        <div class="flex items-start gap-4">
          <div class="p-3 bg-primary/10 rounded-xl">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 text-primary"><circle cx="12" cy="12" r="10"/><circle cx="12" cy="12" r="6"/><circle cx="12" cy="12" r="2"/></svg>
          </div>
          <div>
            <h2 class="font-display text-2xl font-semibold text-foreground mb-4">Objetivo General</h2>
            <p class="text-muted-foreground leading-relaxed text-lg">
              Formar personas con capacidades directivas y de investigación de alto nivel, competentes en el diseño,
              implementación y evaluación de modelos de gestión e intervención que optimicen el desempeño de las
              organizaciones públicas, privadas o no lucrativas, orientando resultados hacia la creación sostenible con
              impacto social en la región.
            </p>
          </div>
        </div>
      </div>

      <div class="mb-12">
        <h2 class="font-display text-2xl font-semibold text-foreground mb-6 flex items-center gap-3">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 text-primary"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="m9 11 3 3L22 4"/></svg>
          Objetivos Particulares
        </h2>
        <div class="space-y-4">
          {
            objetivosParticulares.map((objetivo, index) => (
              <div class="flex items-start gap-4 bg-card rounded-xl p-4 border border-border">
                <span class="flex-shrink-0 w-8 h-8 bg-primary/10 text-primary rounded-lg flex items-center justify-center font-semibold text-sm">
                  {index + 1}
                </span>
                <p class="text-foreground/90 leading-relaxed">{objetivo}</p>
              </div>
            ))
          }
        </div>
      </div>

      <div class="mb-12">
        <h2 class="font-display text-2xl font-semibold text-foreground mb-6 flex items-center gap-3">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="h-6 w-6 text-primary"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="m9 11 3 3L22 4"/></svg>
          Metas del Programa
        </h2>
        <div class="space-y-4">
          {
            metas.map((meta, index) => (
              <div class="flex items-start gap-4 bg-card rounded-xl p-4 border border-border">
                <span class="flex-shrink-0 w-8 h-8 bg-primary/10 text-primary rounded-lg flex items-center justify-center font-semibold text-sm">
                  {index + 1}
                </span>
                <p class="text-foreground/90 leading-relaxed">{meta}</p>
              </div>
            ))
          }
        </div>
      </div>

      <ObjetivosTabs perfilIngreso={perfilIngreso} perfilEgreso={perfilEgreso} />
    </div>
  </section>
</BaseLayout>
