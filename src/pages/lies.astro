---
import { Briefcase, Target, TrendingUp, Users } from "lucide-react";
import BaseLayout from "@/layouts/BaseLayout.astro";
import { PageHeader } from "@/components/ui/PageHeader";

const lineas = [
  {
    id: "1",
    titulo: "Gestión y Desarrollo Empresarial",
    descripcion:
      "Línea de investigación enfocada en el estudio y mejora de los procesos de gestión en organizaciones empresariales, incluyendo estrategias de crecimiento, innovación, competitividad y sustentabilidad.",
    areas: [
      "Estrategia empresarial y competitividad",
      "Innovación y emprendimiento",
      "Finanzas corporativas",
      "Mercadotecnia estratégica",
      "Gestión del talento humano",
    ],
    icon: Briefcase,
  },
];
---

<BaseLayout
  title="MDO UAGro | LIES"
  description="Líneas de investigación de la Maestría en Dirección de Organizaciones."
>
  <PageHeader
    title="Líneas de Investigación e Incidencia Social"
    subtitle="Conoce las líneas de generación y aplicación del conocimiento de nuestro programa"
    badge="LIES"
  />

  <section class="py-16">
    <div class="max-w-5xl mx-auto px-4">
      <div class="space-y-8">
        {
          lineas.map((linea) => (
            <div class="bg-card rounded-2xl p-8 shadow-sm border border-border hover:shadow-md transition-shadow">
              <div class="flex items-start gap-6">
                <div class="p-4 bg-primary/10 rounded-xl flex-shrink-0">
                  <linea.icon className="h-8 w-8 text-primary" />
                </div>
                <div class="flex-1">
                  <h2 class="font-display text-2xl font-semibold text-foreground mb-3">
                    {linea.titulo}
                  </h2>
                  <p class="text-muted-foreground leading-relaxed mb-6">
                    {linea.descripcion}
                  </p>

                  <div>
                    <h3 class="font-semibold text-foreground mb-3 flex items-center gap-2">
                      <Target className="h-4 w-4 text-accent" />
                      Áreas de Estudio
                    </h3>
                    <div class="flex flex-wrap gap-2">
                      {linea.areas.map((area) => (
                        <span class="px-3 py-1.5 bg-muted text-sm text-foreground/80 rounded-lg">
                          {area}
                        </span>
                      ))}
                    </div>
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>

      <div class="mt-12 bg-primary/5 rounded-2xl p-8 text-center">
        <Users className="h-12 w-12 text-primary mx-auto mb-4" />
        <h3 class="font-display text-xl font-semibold text-foreground mb-2">
          ¿Interesado en investigar con nosotros?
        </h3>
        <p class="text-muted-foreground max-w-2xl mx-auto">
          Nuestro núcleo académico está conformado por investigadores activos
          que pueden guiar tu proyecto de tesis en estas líneas de
          investigación.
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
